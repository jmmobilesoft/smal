<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clock_view_activity_screen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    android:padding="5dp" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/clock_view_activity_buttons_layout"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/clock_view_activity_pickers_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <NumberPicker
                        android:id="@+id/clock_view_activity_hours_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <NumberPicker
                        android:id="@+id/clock_view_activity_minutes_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/clock_view_activity_days_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#0099cc" />

            <LinearLayout
                android:id="@+id/clock_view_activity_days_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clock_view_activity_pickers_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <ToggleButton
                    android:id="@+id/clock_view_activity_button_MO"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:background="#2F2F2F"
                    android:textColor="@color/toogle_color"
                    android:textOff="MO"
                    android:textOn="MO" />

                <ToggleButton
                    android:id="@+id/clock_view_activity_button_TU"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:background="#2F2F2F"
                    android:textColor="@color/toogle_color"
                    android:textOff="TU"
                    android:textOn="TU" />

                <ToggleButton
                    android:id="@+id/clock_view_activity_button_WE"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:background="#2F2F2F"
                    android:textColor="@color/toogle_color"
                    android:textOff="WE"
                    android:textOn="WE" />

                <ToggleButton
                    android:id="@+id/clock_view_activity_button_TH"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:background="#2F2F2F"
                    android:textColor="@color/toogle_color"
                    android:textOff="TH"
                    android:textOn="TH" />

                <ToggleButton
                    android:id="@+id/clock_view_activity_button_FR"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:background="#2F2F2F"
                    android:textColor="@color/toogle_color"
                    android:textOff="FR"
                    android:textOn="FR" />

                <ToggleButton
                    android:id="@+id/clock_view_activity_button_SA"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:background="#2F2F2F"
                    android:textColor="@color/toogle_color"
                    android:textOff="SA"
                    android:textOn="SA" />

                <ToggleButton
                    android:id="@+id/clock_view_activity_button_SU"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:background="#2F2F2F"
                    android:textColor="@color/toogle_color"
                    android:textOff="SU"
                    android:textOn="SU" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/clock_view_activity_name_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#0099cc" />

            <LinearLayout
                android:id="@+id/clock_view_activity_name_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clock_view_activity_days_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:text="Name:"
                    android:textColor="#F7F5F5"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/clock_view_activity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="#2F2F2F"
                    android:textColor="#F7F5F5" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/clock_view_activity_ringtone_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#0099cc" />

            <LinearLayout
                android:id="@+id/clock_view_activity_ringtone_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clock_view_activity_name_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/clock_view_activity_sound_pick"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Select alarm tone"
                    android:textColor="#F7F5F5"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/clock_view_activity_sound_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#F7F5F5"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/clock_view_activity_volume_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#0099cc" />

            <LinearLayout
                android:id="@+id/clock_view_activity_volume_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clock_view_activity_ringtone_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Set volume"
                    android:textColor="#F7F5F5"
                    android:textSize="13sp" />

                <SeekBar
                    android:id="@+id/clock_view_activity_volume_picker"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/clock_view_activity_snooze_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#0099cc" />

            <LinearLayout
                android:id="@+id/clock_view_activity_snooze_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clock_view_activity_volume_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Snooze time"
                    android:textColor="#F7F5F5"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/clock_view_activity_snooze_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/clock_view_activity_snooze_minus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/clock_view_activity_snooze_number"
                        android:background="#000000"
                        android:text="-"
                        android:textSize="20sp"
                        android:textColor="#0099cc" />



                    <TextView
                        android:id="@+id/clock_view_activity_snooze_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#000000"
                        android:textColor="#0099cc" />

                    <Button
                        android:id="@+id/clock_view_activity_snooze_plus_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/clock_view_activity_snooze_number"
                        android:background="#000000"
                        android:text="+"
                        android:textSize="20sp"
                        android:textColor="#0099cc" />
                </RelativeLayout>
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/clock_view_activity_weather_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clock_view_activity_snooze_container"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/clock_view_activity_weather_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:text="Weather"
                    android:textColor="#F7F5F5"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/clock_view_activity_weather_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#F7F5F5"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/clock_view_activity_buttons_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/clock_view_activity_buttons_container"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#0099cc" />

        <LinearLayout
            android:id="@+id/clock_view_activity_buttons_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/clock_view_activity_save"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="Save"
                android:textColor="#33b5e5" />

            <TextView
                android:id="@+id/clock_item_spacer"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:background="#0099cc" />

            <Button
                android:id="@+id/clock_view_activity_cancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="Delete"
                android:textColor="#33b5e5" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>