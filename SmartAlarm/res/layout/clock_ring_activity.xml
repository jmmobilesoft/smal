<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <RelativeLayout android:id="@+id/ring_info_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/ring_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="WAKE UP!"
            android:textColor="@android:color/background_light"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/ring_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ring_text"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/background_light"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/ring_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/ring_clock"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/ring_weather_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ring_info_container" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ring_image_wiew"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/ring_temperature_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="15Â°C"
                android:textSize="50sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/ring_seek_container"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal" >

        <SeekBar
            android:id="@+id/ring_seek_dismiss"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/seek_style"
            android:thumb="@color/seek_trackball_style"
            android:translationX="-2dp" />

        <SeekBar
            android:id="@+id/ring_seek_snooze"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/seek_style"
            android:thumb="@color/seek_trackball_style"
            android:translationX="2dp" />
    </LinearLayout>

</RelativeLayout>