<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/weather_item_image_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/weather_item_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/weather_item_image_view"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:text="Sample"
        android:textColor="#F7F5F5"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/weather_item_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/weather_item_image_view"
        android:layout_below="@+id/weather_item_city"
        android:layout_marginLeft="10dp"
        android:text="15°C"
        android:textColor="#F7F5F5"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/weather_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_item_city"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/weather_item_temp"
        android:text="Clear weather"
        android:textColor="#F7F5F5" />

    <TextView
        android:id="@+id/weather_item_maxmintemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_item_description"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/weather_item_temp"
        android:text="15/19°C"
        android:textColor="#F7F5F5" />

    <TextView
        android:id="@+id/weather_item_spacer"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#0099cc"
        android:textColor="#F7F5F5" />

</RelativeLayout>