<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/timer_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#F7F5F5"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/timer_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/timer_item_time"
        android:textColor="#F7F5F5"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/timer_item_start_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer_item_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/timer_item_time"
        android:text="Start"
        android:textColor="#F7F5F5"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/timer_item_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer_item_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/timer_item_start_title"
        android:textColor="#F7F5F5"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/timer_item_end_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer_item_start"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/timer_item_time"
        android:text="End  "
        android:textColor="#F7F5F5"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/timer_item_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer_item_start"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/timer_item_end_title"
        android:textColor="#F7F5F5"
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/timer_item_active"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@color/timer_checkbox"
        android:button="@null" />

    <TextView
        android:id="@+id/timer_item_spacer"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#0099cc" />

</RelativeLayout>