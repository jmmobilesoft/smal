<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sk.jmmobilesoft.smartalarm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".ClockViewActivity"
            android:label="@string/app_name"></activity>
        <activity android:name=".RingScreen"
            android:label="@string/app_name"></activity>
        
        <service android:name="sk.jmmobilesoft.smartalarm.service.ClockService" 
            android:enabled="true"/>
        
        <receiver android:name="sk.jmmobilesoft.smartalarm.service.ClockServiceReciever" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>